<% include partials/top %>

<div class="container mt-3">

  <h1 class="text-center">Edit User Form</h1>

  <form class="form" action="/users/<%= user._id %>?_method=PATCH" method="POST">
    
    <div class="form-group">
      <label for="email">Email</label>
      <input class="form-control" type="email" name="email" placeholder="Enter Email..." autocomplete="email" value="<%= user.email %>" required>
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input class="form-control" type="password" name="password" placeholder="Enter Password..." autocomplete="current-password" required>
    </div>

    <button class="btn btn-lg btn-outline-primary btn-block">Edit User</button>

  </form>

  <form class="mt-2" id="delete" action="/users/<%= user._id %>?_method=DELETE" method="POST">

    <button type="submit" class="btn btn-lg btn-block btn-outline-danger">Delete User</button>

  </form>

</div>

<% include partials/bottom %>
